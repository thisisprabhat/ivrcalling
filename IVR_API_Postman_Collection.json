{
  "info": {
    "name": "IVR Calling System API",
    "description": "Complete Postman collection for IVR Calling System with Dynamic Campaign Support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/health",
              "host": ["{{base_url}}"],
              "path": ["api", "health"]
            },
            "description": "Check if the API is running and healthy"
          }
        },
        {
          "name": "Get Supported Languages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/languages",
              "host": ["{{base_url}}"],
              "path": ["api", "languages"]
            },
            "description": "Get list of all supported languages for IVR"
          }
        }
      ]
    },
    {
      "name": "Campaigns",
      "item": [
        {
          "name": "Create Campaign",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Summer Sale Campaign\",\n  \"description\": \"Promotional campaign for summer products\",\n  \"language\": \"en\",\n  \"intro_text\": \"Thank you for calling. We have special offers for you today.\",\n  \"actions\": [\n    {\n      \"action_type\": \"information\",\n      \"action_input\": \"1\",\n      \"message\": \"Get fifty percent off all summer items\"\n    },\n    {\n      \"action_type\": \"forward\",\n      \"action_input\": \"2\",\n      \"forward_phone\": \"+1234567890\",\n      \"message\": \"connecting you to our sales team\"\n    }\n  ],\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns"]
            },
            "description": "Create a new campaign with intro text and dynamic IVR actions"
          }
        },
        {
          "name": "List All Campaigns",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns"]
            },
            "description": "Get all campaigns"
          }
        },
        {
          "name": "Get Campaign by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns", "{{campaign_id}}"]
            },
            "description": "Get a specific campaign by ID"
          }
        },
        {
          "name": "Update Campaign",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Campaign Name\",\n  \"description\": \"Updated description\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns", "{{campaign_id}}"]
            },
            "description": "Update an existing campaign"
          }
        },
        {
          "name": "Delete Campaign",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns", "{{campaign_id}}"]
            },
            "description": "Delete a campaign"
          }
        },
        {
          "name": "Get Campaign Calls",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns/{{campaign_id}}/calls",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns", "{{campaign_id}}", "calls"]
            },
            "description": "Get all calls for a specific campaign with statistics"
          }
        }
      ]
    },
    {
      "name": "Calls",
      "item": [
        {
          "name": "Initiate Bulk Calls",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"campaign_id\": \"{{campaign_id}}\",\n  \"language\": \"en\",\n  \"contacts\": [\n    {\n      \"phone_number\": \"+1234567890\",\n      \"name\": \"John Doe\"\n    },\n    {\n      \"phone_number\": \"+0987654321\",\n      \"name\": \"Jane Smith\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/calls/bulk",
              "host": ["{{base_url}}"],
              "path": ["api", "calls", "bulk"]
            },
            "description": "Initiate bulk calls for a campaign"
          }
        },
        {
          "name": "Get Call Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/calls/{{call_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "calls", "{{call_id}}"]
            },
            "description": "Get status and logs for a specific call"
          }
        }
      ]
    },
    {
      "name": "Webhooks (Twilio Callbacks)",
      "item": [
        {
          "name": "Voice Webhook - Initial Call",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                },
                {
                  "key": "To",
                  "value": "+0987654321",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/voice?call_id={{call_id}}&language=en",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "voice"],
              "query": [
                {
                  "key": "call_id",
                  "value": "{{call_id}}"
                },
                {
                  "key": "language",
                  "value": "en"
                }
              ]
            },
            "description": "Webhook called by Twilio when call is answered - returns TwiML with welcome message"
          }
        },
        {
          "name": "Gather Webhook - Press 1",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "Digits",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/gather",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "gather"]
            },
            "description": "Handle user pressing 1 - executes corresponding action from campaign"
          }
        },
        {
          "name": "Gather Webhook - Press 2",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "Digits",
                  "value": "2",
                  "type": "text"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/gather",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "gather"]
            },
            "description": "Handle user pressing 2 - executes corresponding action from campaign"
          }
        },
        {
          "name": "Gather Webhook - Press 0 (Repeat)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "Digits",
                  "value": "0",
                  "type": "text"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/gather",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "gather"]
            },
            "description": "Handle user pressing 0 - repeats the menu"
          }
        },
        {
          "name": "Status Callback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "CallStatus",
                  "value": "completed",
                  "type": "text",
                  "description": "initiated, ringing, in-progress, completed, failed, busy, no-answer"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                },
                {
                  "key": "To",
                  "value": "+0987654321",
                  "type": "text"
                },
                {
                  "key": "CallDuration",
                  "value": "45",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/status",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "status"]
            },
            "description": "Twilio status callback - called when call status changes"
          }
        },
        {
          "name": "Opt-out Confirmation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "CallSid",
                  "value": "CA1234567890abcdef1234567890abcdef",
                  "type": "text"
                },
                {
                  "key": "Digits",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "From",
                  "value": "+1234567890",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/webhook/optout",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook", "optout"]
            },
            "description": "Handle opt-out confirmation (legacy endpoint)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "campaign_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "call_id",
      "value": "",
      "type": "string"
    }
  ]
}
